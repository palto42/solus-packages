<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
  <id>io.github.basiomeuspuga.lector</id>

  <name>Lector</name>
  <summary>Qt based ebook reader </summary>

  <metadata_license>CC0-1.0</metadata_license>
  <project_license>GPL-3.0-or-later</project_license>

  <description>
    <p>
      Qt based ebook reader
    </p>
    <p>
      Currently supports:
    </p>
    <ul>
      <li>pdf</li>
      <li>epub</li>
      <li>djvu</li>
      <li>fb2</li>
      <li>mobi</li>
      <li>azw / azw3 / azw4</li>
      <li>cbr / cbz</li>
      <li>md</li>
    </ul>
  </description>

  <launchable type="desktop-id">lector.desktop</launchable>
